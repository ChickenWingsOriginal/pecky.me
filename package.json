{
  "name": "pecky-monorepo",
  "version": "1.0.0",
  "description": "Pecky dApp monorepo with original static site and Next.js version",
  "packageManager": "pnpm@10.20.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "latest"
  }
}